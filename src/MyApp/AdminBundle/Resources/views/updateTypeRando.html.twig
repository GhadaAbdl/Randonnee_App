{% extends "@Admin/template.html.twig" %}
{% block wrapper %}

    <div class="widget-content">
        <div class="col-md-12">
            <div class="widget">
                <div class="widget-header">
                    <h3><i class="fa fa-edit"></i> Modifier un type de randonnee</h3></div>
                <div class="widget-content">
                    <form role="form" class="form-horizontal" method="post" action="{{ path('admin_type_rando_modefication',{id:type.id}) }}">
                        <div class="form-group">
                            <label class="control-label sr-only" >id Type Randonnee</label>
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <input type="text" placeholder="id du type" class="form-control"  value="{{ type.id }}" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label sr-only" for="username">Type Randonnee</label>
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <input type="text" placeholder="nom du type" id="username" class="form-control" name="type_name" value="{{ type.type }}">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-check-circle"></i> Modifier </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>



{% endblock %}