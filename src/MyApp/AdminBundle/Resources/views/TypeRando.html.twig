{% extends "@Admin/template.html.twig" %}
{% block wrapper %}


<div class="widget-content">
    <div class="col-md-12">
        <h1>Les Types des randonnees</h1>
    </div>
    <div class="col-md-12">
       <div class="col-md-6">
           <div class="widget">
               <div class="widget-header">
                   <h3><i class="fa fa-edit"></i> Les Types Des Randonnees</h3></div>
           <table class="table" >
               <thead>
               </thead>
               <tbody>
               {% for item in listTypeRando  %}
                   <tr>
                       <td>{{ item.type }}</td>
                       <td><a href="{{ path("admin_type_rando_modefication",{id:item.id}) }}" class="btn btn-primary"><i class="fa fa-edit"></i>Edit</a>
                           <a href="{{ path("admin_type_rando_supp",{id:item.id}) }}" class="btn btn-danger"><i class="fa fa-close"></i>delete</a>
                       </td>
                   </tr>
               {% endfor %}

               </tbody>
           </table>
           </div>
       </div>

        <div class="col-md-6">
            <div class="widget">
                <div class="widget-header">
                    <h3><i class="fa fa-edit"></i> ajouter un type de randonnee</h3></div>
                <div class="widget-content">
                    <form role="form" class="form-horizontal" method="post" action="{{ path('admin_type_rando_ajout') }}">
                        <div class="form-group">
                            <label class="control-label sr-only" for="username">Type Randonnee</label>
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <input type="text" placeholder="nom du type" id="username" class="form-control" name="type_name">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-check-circle"></i> Ajouter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>





</div>


{% endblock %}